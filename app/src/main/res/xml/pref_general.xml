<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/pref_temperature_label"
        android:key="@string/pref_temperature_key"
        android:defaultValue="@string/pref_temperature_default"
        android:entryValues="@array/temperature_unit_values"
        android:entries="@array/temperature_unit"
        />
</PreferenceScreen>